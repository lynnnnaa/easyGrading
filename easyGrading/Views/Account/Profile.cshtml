@model ProfileModel
@{
    ViewData["Title"] = "Profile";
}
<div class = "container mt-5">
    <div class = "col text-center mb-5">
        <h2>Profile</h2>
    </div>

    <div class = "form-group mb-1">
        <button asp-controller = "Account" asp-action = "Profile">Edit</button>

            <div class = "col text-center">
                <h3>@Model.Username</h3>
                <h5>@Model.Degree</h5>
                <h5>@Model.Major</h5>
                <h5>@Model.Minor</h5>
            </div>

            <div class = "col text-center">
                <button class = "btn btn-primary btn-block mb-2" type = "submit">Sign Out</button>
            </div>

    </div>

    <div>
        <nav class = "navbar fixed-bottom btn-group" role = "group">
            <button type = "button" class = "btn btn-primary-outline">
                <i class = "fa fa-2x fa-book"></i>
                <small class = "row text-center justify-content-center"><b>Classes</b></small>
            </button>
            <button type = "button" class = "btn btn-primary-outline">
                <img src = "~/images/logo.png" width = "70" height = "70" />
            </button>
            <button type = "button" class = "btn btn-primary-outline">
                <i class = "fa fa-2x fa-user"></i>
                <small class = "row text-center justify-content-center"><b>Profile</b></small>
            </button>
        </nav>
    </div>

</div>
