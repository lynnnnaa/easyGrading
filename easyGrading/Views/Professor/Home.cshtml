@model IEnumerable<Course>
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
    <div class="main">
        <h2>Course Teaching-click to edit course outline</h2>
        <div class="list-group">
            @foreach (var course in Model)
            {
                <a asp-action="ViewOutline" asp-controller="Professor" asp-route-id=@course.Id >
                    <div class="list-group-item list-group-item-action">
                        <h5 class="row ml-2 mt-1">
                           @course.Name
                        </h5>
                        <small class="row ml-2">Department Id: @course.Id</small>
                    </div>

                </a>
            }
        </div>
    </div>

<style>
    .main {
         margin-top: 100px;
        margin-left: 200px; /* Same as the width of the sidenav */
        font-size: 20px; /* Increased text to enable scrolling */
        padding: 0px 10px;
    }
</style>
