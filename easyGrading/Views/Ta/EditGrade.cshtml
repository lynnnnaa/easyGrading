@model Grade
@{
    Layout = "~/Views/Shared/_Layout3.cshtml";
}
    <div class="main">

        <div class="col text-center mb-5">
            <h2>@ViewBag.courseId-@ViewBag.Name</h2>
        </div>

        <form method="post" asp-controller="Ta" asp-action="EditGrade">
            <h5 class="row ml-2 mt-1">
                Student name: @ViewBag.StudentName
            </h5>
            <div class="form-group">
                <input asp-for="Actual_Grade" class="form-control" type="number" value=@Model.Actual_Grade />
                <strong>@TempData["Message"]</strong>
            </div>
            
            <div class="form-group">
                <label> Allow student edit</label>
                <input asp-for="Editable" class="form-control" type="checkbox"  value=@Model.Editable />
            </div>


            <div class="form-group mb-1">
                <div class="col text-center">
                    <button class="btn btn-primary btn-block mb-2" type="submit" name="button" value="update">Update</button>
                </div>
            </div>

            <div class="form-group mb-1">
                <div class="col text-center">
                    <button class="btn btn-primary btn-block mb-2" type="submit" name="button" value="cancel">cancel</button>
                </div>
            </div>
        </form>
    </div>

<style>
    .main {
         margin-top: 100px;
        margin-left: 200px; /* Same as the width of the sidenav */
        font-size: 20px; /* Increased text to enable scrolling */
        padding: 0px 10px;
    }
</style>
